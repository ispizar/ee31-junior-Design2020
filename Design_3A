int photodiode_pin = 3;
int blueLed_pin = 9;
int redLed_pin = 8;

int blue_path = 10;
int red_path = 12;
int yellow_path = 11;

int hall_sensor = 1;
int magnet_LED = 13;  //orange LED

int black = 330;

//0: black, 1: blue, 2: red, 3: yellow
int current_color = 0;

int reps = 10;


int input1 = 2;
int input2 = 3;
int enable1 = 22;

int input3 = 4;
int input4 = 5;
int enable2 = 24;

void setup() 
{
    pinMode(photodiode_pin, INPUT);
    pinMode(blueLed_pin, OUTPUT);
    pinMode(redLed_pin, OUTPUT);
    
    pinMode(blue_path, OUTPUT);
    pinMode(red_path, OUTPUT);
    pinMode(yellow_path, OUTPUT);
    
    pinMode(hall_sensor, INPUT);
    pinMode(magnet_LED, OUTPUT);

    pinMode(black, OUTPUT);

    pinMode(input1, OUTPUT);
    pinMode(input2, OUTPUT);
    pinMode(enable1, OUTPUT);
  
    pinMode(input3, OUTPUT);
    pinMode(input4, OUTPUT);
    pinMode (enable2, OUTPUT);
  
    digitalWrite(enable1, HIGH);
    digitalWrite(enable2, HIGH);

    Serial.begin (9600);
    get_black_value();
    current_color = 0;
}

void loop() 
{
    if (analogRead(photodiode_pin) - black > 20)
    {
        int both = analogRead(photodiode_pin);
        int just_red = flash_red();
        int just_blue = flash_blue();

        digitalWrite(blueLed_pin, HIGH);
        digitalWrite(redLed_pin, HIGH);

        if (both - black < 80 && just_blue > just_red)
        {
            digitalWrite (blue_path, HIGH);
            current_color = 1;
        }
        else if (both - black < 80 && just_blue < just_red)
        {
            digitalWrite (red_path, HIGH);
            current_color = 2;
        }
        else if (analogRead(photodiode_pin) - black > 80)
        {
            digitalWrite (yellow_path, HIGH);
            current_color = 3;
        }
    }
    else
    {
        current_color = 0;
    }

    Serial.println (analogRead(photodiode_pin));
    detect_magnet();
    

    if (current_color == 1)
    {
      moveForward(200);
    }
    else
    {
      brake();
    }
}

void get_black_value ()
{
    digitalWrite(blueLed_pin, HIGH);
    digitalWrite(redLed_pin, HIGH);
    
    int sum = 0;
    
    for (int i = 0; i < reps; i ++)
    {
        sum += analogRead(photodiode_pin);
        delay (5);
    }
    black = sum / reps;  
}

int flash_blue ()
{
    digitalWrite (redLed_pin, LOW);
    digitalWrite (blueLed_pin, HIGH);

    int sum = 0;
    
    for (int i = 0; i < reps; i ++)
    {
        sum += analogRead(photodiode_pin);
    }
    return sum / reps;  
    
}

int flash_red ()
{
    digitalWrite (redLed_pin, HIGH);
    digitalWrite (blueLed_pin, LOW);

    int sum = 0;
    
    for (int i = 0; i < reps; i ++)
    {
        sum += analogRead(photodiode_pin);
    }
    return sum / reps;      
}


void detect_magnet()
{
   if (hall_sensor > 150)
       digitalWrite(magnet_LED, HIGH);
}


void moveForward(int speed)
{
    analogWrite(input1, speed); //Makes  motor 1 go clockwise
    analogWrite(input4, speed - 50); //Makes motor 2 go counter-clockwise   

    delay(2000);
}
void brake()
{
  digitalWrite(input1, LOW);
  digitalWrite(input2, LOW);
  digitalWrite(input3, LOW);
  digitalWrite(input4, LOW);
}
